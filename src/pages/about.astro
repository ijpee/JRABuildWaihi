---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout 
    title="About Us - JRA BUILD | Building Quality Homes in Waihi Beach"
    description="Learn about JRA BUILD - your trusted local builder in Waihi Beach, New Zealand."
    keywords="JRA BUILD, about, construction, building, Waihi Beach"
>
    <Navbar />

    <!-- Hero Start -->
    <div class="container-fluid pb-5 bg-light hero-header">
        <div class="container py-5">
            <div class="row g-3 align-items-center">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="display-1 mb-0 animated slideInLeft">About</h1>
                </div>
                <div class="col-lg-6 animated slideInRight">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center justify-content-lg-end mb-0">
                            <li class="breadcrumb-item"><a class="text-primary" href="/">Home</a></li>
                            <li class="breadcrumb-item text-secondary active" aria-current="page">About</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!-- About Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-6 wow fadeIn" data-wow-delay="0.1s">
                            <img class="img-fluid" src="/img/about-1.jpg" alt="JRA BUILD team working on framing" loading="lazy" width="600" height="800">
                        </div>
                        <div class="col-6 wow fadeIn" data-wow-delay="0.3s">
                            <img class="img-fluid h-75" src="/img/about-2.jpg" alt="Completed coastal home exterior" loading="lazy" width="600" height="450">
                            <div class="about-caption d-flex align-items-center justify-content-center text-center bg-primary px-3 py-2 w-100">
                                <h4 class="text-white lh-base mb-0">Building Quality Homes in Waihi Beach</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <h1 class="mb-5"><span class="text-uppercase text-primary bg-light px-2">About</span> JRA BUILD</h1>
                    <p class="mb-4">JRA BUILD LIMITED is a locally owned and operated building company serving Waihi Beach and the surrounding Bay of Plenty region. We are committed to delivering quality construction services with a personal touch.</p>
                    <p class="mb-5">Our team brings expertise in all aspects of residential and commercial construction. From concept to completion, we work closely with our clients to ensure their vision becomes reality, on time and within budget.</p>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Licensed & Qualified</h6>
                            <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Local Expertise</h6>
                        </div>
                        <div class="col-sm-6">
                            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Quality Workmanship</h6>
                            <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Competitive Pricing</h6>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mt-5">
                        <a class="btn btn-primary px-4 me-2" href="/contact">Get a Quote</a>
                        <a class="btn btn-outline-primary btn-square border-2 me-2" href="#!"><i
                                class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-primary btn-square border-2 me-2" href="#!"><i
                                class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->

    <Footer />
</BaseLayout>
